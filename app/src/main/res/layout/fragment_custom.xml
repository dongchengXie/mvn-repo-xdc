<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.example.xdc.mylibrary.ColorTrackTextView
            android:id="@+id/color_track_textview_left"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/hello_world"
            android:textSize="@dimen/test_text_size"
            app:text_change_color="@android:color/holo_red_light"
            app:text_original_color="@android:color/black" />

        <com.example.xdc.mylibrary.ColorTrackTextView
            android:id="@+id/color_track_textview_middle"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="@string/hello_world"
            android:textSize="@dimen/test_text_size"
            app:text_change_color="@android:color/holo_red_light"
            app:text_original_color="@android:color/black" />

        <com.example.xdc.mylibrary.ColorTrackTextView
            android:id="@+id/color_track_textview_right"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="@string/hello_world"
            android:textSize="@dimen/test_text_size"
            app:text_change_color="@android:color/holo_red_light"
            app:text_original_color="@android:color/black" />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>